<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">
    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-green-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/4 py-4 ...">Nombre</th>
          <th class="w-1/2 py-4 ...">Apellidos</th>
          <th class="w-1/2 py-4 ...">Email</th>
          <th class="w-28 py-4 ...">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each usuarios}}
        <tr>
          <td class="py-3 px-6 text-center">{{ID_USUARIO}}</td>
          <td class="p-3 text-center">{{NOMBRE}}</td>
          <td class="p-3 text-center">{{APELLIDOS}}</td>
          <td class="p-3 text-center">{{EMAIL}}</td>
          <td class="p-3 flex">
            <form action="/tasks/delete" method="POST" class="mx-2">
              <input type="hidden" value="{{ID_USUARIO}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/tasks/edit/{{ID_USUARIO}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
